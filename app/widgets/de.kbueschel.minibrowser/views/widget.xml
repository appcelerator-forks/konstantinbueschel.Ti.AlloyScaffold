<Alloy>
	<Window module="/ui/crossplatform.ui" id="window">
		<RightNavButton platform="ios">
			<ActivityIndicator id="activityIndicator" />
		</RightNavButton>

		<View id="container" onPostlayout="_onViewFocus">
			<Widget src="de.kbueschel.notification" id="notification" />

			<Module module="com.artanisdesign.tismoothprogressbar" method="createSmoothProgressBar" platform="android" id="loadingBar"/>

			<WebView id="webView" onLoad="_onWebViewLoadStateChange" onBeforeload="_onWebViewLoadStateChange" onError="_onWebViewLoadStateChange" />
		</View>

		<Toolbar id="toolbar" class="bottom" platform="ios">
			<Items>
				<Button id="browseBack" class="disabled" onClick="_handleToolbarClick" />
				<FlexSpace />
				<Button id="browseForward" class="disabled" onClick="_handleToolbarClick" />
				<FlexSpace />
				<Button id="refresh" class="disabled" onClick="_handleToolbarClick" />
				<FlexSpace />
				<Button id="action" class="disabled" onClick="_handleToolbarClick" />
			</Items>
		</Toolbar>

		<View id="toolbar" class="hgroup bottom" platform="android">
			<View class="buttonWrapper">
				<Button id="browseBack" class="disabled" onClick="_handleToolbarClick" />
			</View>

			<View class="buttonWrapper">
				<Button id="browseForward" class="disabled" onClick="_handleToolbarClick" />
			</View>

			<View class="buttonWrapper">
				<Button id="refresh" class="disabled" onClick="_handleToolbarClick" />
			</View>
		</View>
	</Window>
</Alloy>